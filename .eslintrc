{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"airbnb-base"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"no-tabs": 0,
		"comma-dangle": 0,
		"arrow-parens": 0,
		"no-confusing-arrow": 0,
		"no-nested-ternary": 0,
		"no-use-before-define": 0,
		"no-console": 0,
		"no-await-in-loop": 0,
		"no-loop-func": 0,
		"import/no-cycle": [
			0,
			{
				"maxDepth": 1
			}
		],
		"max-len": [
			"error",
			120
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		]
	}
}